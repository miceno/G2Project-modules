/**
 * This is an implementation of the checkout module's CheckoutStatusPageInterface_1_0
 *
 * @package CheckoutDownload
 * @subpackage Classes
 * @version $Revision: 1664 $
 * @author Alec Myers <alec@alecmyers.com>
 */
class CheckoutDownloadStatusPlugin extends CheckoutStatusPageInterface_1_0 {
	/**
	 * @see CheckoutStatusPageInterface_1_0::loadTemplate(&$template, &$form)
	 */
	public function loadTemplate(&$template, &$form) {
		return array(null, 'modules/checkoutdownload/templates/StatusPageDownload.tpl', 'modules_checkoutdownload');
	}

	/**
	 * @see CheckoutStatusPageInterface_1_0::loadTemplate(&$template, &$form)
	 */
	public function handleRequest(&$form) {
		if (isset($form['checkoutdownload']['downloadZip'])) {
			$results['redirect']['controller']    = 'checkoutdownload.BuildDownload';
			$results['redirect']['transactionId'] = $form['checkoutdownload']['transactionId'];
			$results['redirect']['verify1']       = $form['checkoutdownload']['verify1'];
			$results['redirect']['verify2']       = $form['checkoutdownload']['verify2'];
			$results['status']                    = '';
			$results['error']                     = '';

			return array(null, $results);
		}

		return array(null, null);
	}
}
