/**
 * This is an implementation of the checkout module's CheckoutEmailInterface_1_0
 *
 * @package Checkoutemail
 * @subpackage Classes
 */
class CheckoutEmailEmailPlugin extends CheckoutEmailInterface_1_0 {
	/**
	 * @see CheckoutEmailInterface_1_0::getEmailTemplateAndVariables()
	 */
	public function getEmailTemplateAndVariables($transactionId, $templateName) {

		// check here to see if a checkoutemail transaction
		list($ret, $transaction) = GalleryCoreApi::loadEntitiesById($transactionId);

		if ($ret) {
			return array($ret, null);
		}

		if ($transaction->getPaymentPlugin() != 'checkoutemail') {
			return array(null, null, null, null);
		}

		switch ($templateName) {
			case 'confirm':
				return array(null, 'modules/checkoutemail/templates/email/confirm.tpl', 'modules_checkoutemail', null);

			break;
		}

		return array(null, null, null, null);
	}
}
