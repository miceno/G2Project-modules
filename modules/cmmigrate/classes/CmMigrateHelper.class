GalleryCoreApi::requireOnce('lib/adodb/adodb.inc.php');

/**
 * A helper class for the CmMigrate module.
 * @package CmMigrate
 * @subpackage Classes
 * @author David Angier <david@angier.co.uk>
 * @version $Revision: 847 $
 */
class CmMigrateHelper {
	/**
	 * configPath derives the path to the Coppermine configuration file from the
	 * Coppermine base installation directory
	 *
	 * @param  string $baseDir The path to the Coppermine install directory
	 * @return string The path to the config file
	 */
	public function configPath($baseDir) {
		global $gallery;

		$platform =& $gallery->getPlatform();
		$slash    = $platform->getDirectorySeparator();
		$tmp      = trim($baseDir);

		if ($tmp[strlen($tmp) - 1] != $slash) {
			$tmp .= $slash;
		}

		return $baseDir . $slash . 'include' . $slash . 'config.inc.php';
	}

	/**
	 * isValidCopperminePath determines whether the proposed path is likely to be
	 * a Coppermine base installation directory.
	 *
	 * @param  string $baseDir The path to be tested
	 * @return bool
	 */
	public function isValidCopperminePath($baseDir) {
		global $gallery;
		$platform =& $gallery->getPlatform();

		if (!$platform->is_dir($baseDir)) {
			return false;
		}

		$configpath = CmMigrateHelper::configPath($baseDir);

		if (!$platform->is_file($configpath)) {
			return false;
		}

		return true;
	}
}
